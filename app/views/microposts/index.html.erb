<p style="color: green"><%= notice %></p>
<div class="mb-5">
  <%= link_to "new org", new_micropost_path %>
</div>
<div class="row">
  <div class="col-md-5">
    <div id="microposts">
      <% @microposts.each do |micropost| %>
        <%= render micropost %>
        <hr>
      <% end %>
    </div>

  </div>
</div>

<div class="apple_pagination mt-3">
  <div class="page-info">
    <%#= page_entries_info @micropost %>
  </div>
  <%= will_paginate @microposts %>
</div>
